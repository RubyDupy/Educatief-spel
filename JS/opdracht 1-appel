let img;
var usernameInput;

function preload(){
  img = loadImage('apple-tfa-2.jpg');
}
function setup() {
  createCanvas(300, 200);
  textSize(18);
}
function draw(){
  image(img, 0, 0);
  text("Answer:", 20, 20);
  usernameInput = createInput('Your answer', 'text');
  usernameInput.position(30, 40);
  if (usernameInput == 'apple'){ //hier zit volgens mij de fout
    text('correct', 20, 100);
  }
}
// niet definitief.
